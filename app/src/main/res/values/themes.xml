<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Fruitastic" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/red</item>
        <item name="android:statusBarColor">@color/white</item>

        <item name="colorSecondaryContainer">@color/red_light</item>
        <item name="colorOnSecondaryContainer">@color/red</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.Fruitastic" parent="Base.Theme.Fruitastic" />

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/green</item>
        <item name="colorSurfaceContainerHigh">@color/white</item>
    </style>

    <style name="CustomTextFieldTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorPrimary">@color/green</item>
        <item name="colorOutline">?attr/colorOutline</item>
    </style>

    <style name="TextAppearance.BottomNavigation" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/nunito_800_extrabold</item>
        <item name="android:fontFamily">@font/nunito_800_extrabold</item>
    </style>
</resources>